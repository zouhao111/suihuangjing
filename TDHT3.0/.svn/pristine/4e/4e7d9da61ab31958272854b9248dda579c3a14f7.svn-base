<script type="text/javascript">
function pie_balance(from,startTime2,endTime2,R_ID){
		var myChart = echarts.init(document.getElementById('main')); 
		myChart.showLoading('default', {text:'统计中，请稍候...', color: '#c23531',
  textColor: '#000',
  maskColor: 'rgba(255, 255, 255, 0.8)',
  zlevel: 0});
		var myChart2 = echarts.init(document.getElementById('main2')); 
		myChart2.showLoading('default', {text:'统计中，请稍候...', color: '#c23531',
  textColor: '#000',
  maskColor: 'rgba(255, 255, 255, 0.8)',
  zlevel: 0});
		$.ajax({
        url:'list_balance_pie',
		type:"post",
		async: true,
		dataType:"json",
		data:{R_ID,from,startTime2,endTime2},
		success:function(data){
			var balance_sum=data.balance_sum;
			var quaList=data.quaList;
		var is=[];var id=[];
		var isdata=[];
		var iddata=[];
		if(balance_sum.isHave){
			is.push('工业给水');
			isdata.push({
			value:balance_sum.Isztraffic_sum,
			name:'工业给水',
		})
		}
		if(balance_sum.lsHave){
			is.push('生活给水');
			isdata.push({
			value:balance_sum.Lsztraffic_sum,
			name:'生活给水',
		})
		}
		if(balance_sum.idHave){
			id.push('工业排水');
			iddata.push({
			value:balance_sum.Idztraffic_sum,
			name:'工业排水',
		})
		}
		if(balance_sum.ldHave){
			id.push('生活排水');
			iddata.push({
			value:balance_sum.Ldztraffic_sum,
			name:'生活排水',
		})
		}
		id.push('损耗值');
		id.push('不明工业排水');
		iddata.push({
			value:balance_sum.Wastage_sum,
			name:'损耗值',
		})
		iddata.push({
			value:balance_sum.Unknow_sum,
			name:'不明工业排水',
		})
		
		
		
		
				//水平衡分析2个饼图
	 	var myChart = echarts.init(document.getElementById('main')); 
	 	var myChart2 = echarts.init(document.getElementById('main2')); 
        
         option = {
				    title : {
				        text: '给水分析',
				        x:'center'
				    },
				    tooltip : {
				        trigger: 'item',
				        formatter: "{a} <br/>{b} : {c} ({d}%)"
				    },
				    legend: {
				        orient: 'vertical',
				        left: 'left',
				        data: is
				    },
				    series : [
				        {
				            name: '给水分析',
				            type: 'pie',
				            radius : '55%',
				            center: ['50%', '50%'],
				            data:isdata,
				            itemStyle: {
				                emphasis: {
				                    shadowBlur: 10,
				                    shadowOffsetX: 0,
				                    shadowColor: 'rgba(0, 0, 0, 0.5)'
				                }
				            }
				        }
				    ]
				};
				
				
				option2 = {
				    title : {
				        text: '排水分析',
				        x:'center'
				    },
				    tooltip : {
				        trigger: 'item',
				        formatter: "{a} <br/>{b} : {c} ({d}%)"
				    },
				    legend: {
				        orient: 'vertical',
				        left: 'left',
				        data: id
				    },
				    series : [
				        {
				            name: '排水分析',
				            type: 'pie',
				            radius : '55%',
				            center: ['50%', '50%'],
				            data:iddata,
				            itemStyle: {
				                emphasis: {
				                    shadowBlur: 10,
				                    shadowOffsetX: 0,
				                    shadowColor: 'rgba(0, 0, 0, 0.5)'
				                }
				            }
				        }
				    ]
				};
 
     	 myChart.setOption(option);
     	 myChart2.setOption(option2);
     	 myChart.hideLoading();
	myChart2.hideLoading();
		}
		})
	}

</script>
