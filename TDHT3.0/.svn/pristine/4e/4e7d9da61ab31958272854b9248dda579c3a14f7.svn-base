<script type="text/javascript">



		//水量统计曲线
		
	function Line_qua_poll(from,startTime1,endTime1,R_ID){
		var myChart3 = echarts.init(document.getElementById('main3')); 
		myChart3.showLoading('default', {text:'统计中，请稍候...', color: '#c23531',
  textColor: '#000',
  maskColor: 'rgba(255, 255, 255, 0.8)',
  zlevel: 0});
		$.ajax({
        url:'listQualityCurve',
		type:"post",
		async: true,
		dataType:"json",
		data:{R_ID,from,startTime1,endTime1},
		success:function(data){
			var datajson=data.datajson;
			var i_supply_f=data.i_supply_f;
			var l_supply_f=data.l_supply_f;
			var i_drainage_f=data.i_drainage_f;
			var l_drainage_f=data.l_drainage_f;
		
		
			option3 = {
			    title: {
			        text: ''
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:['工业给水','生活给水','工业排水','生活排水']
			    },
			    grid: {
			        left: '3%',
			        right: '4%',
			        bottom: '3%',
			        containLabel: true
			    },
			    toolbox: {
			        feature: {
			            saveAsImage: {}
			        }
			    },
			    xAxis: {
			        type: 'category',
			        boundaryGap: false,
			        //data: ['周一','周二','周三','周四','周五','周六','周日']
			        data: datajson
			    },
			    yAxis: {
			        type: 'value',
			         splitArea : {show : true}//保留网格区域
			    },
			    series: [
			        {
			            name:'工业给水',
			            type:'line',
			            stack: '总量',
			            //data:[120, 132, 101, 134, 90, 230, 210]
			            data: i_supply_f
			        },
			        {
			            name:'生活给水',
			            type:'line',
			            stack: '总量',
			            //data:[220, 182, 191, 234, 290, 330, 310]
			            data: l_supply_f
			        },
			        {
			            name:'工业排水',
			            type:'line',
			            stack: '总量',
			            //data:[150, 232, 201, 154, 190, 330, 410]
			            data: i_drainage_f
			        },
			        {
			            name:'生活排水',
			            type:'line',
			            stack: '总量',
			            //data:[320, 332, 301, 334, 390, 330, 320]
			            data: l_drainage_f
			        }
			    ]
			};
		myChart3.setOption(option3);
		myChart3.hideLoading();
		}
		})
	}

	
	</script>
<script type="text/javascript">
	$(function () {
